<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tripSourceLocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="Chennai"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tripDestinationLocationText"
        android:layout_alignEnd="@+id/tripSourceLocationText"
        android:layout_alignLeft="@+id/tripDestinationLocationText"
        android:layout_alignRight="@+id/tripSourceLocationText"
        android:layout_alignStart="@+id/tripDestinationLocationText"
        android:text="To"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/tripDestinationLocationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tripSourceLocationText"
        android:layout_alignLeft="@+id/tripSourceLocationText"
        android:layout_alignRight="@+id/tripSourceLocationText"
        android:layout_alignStart="@+id/tripSourceLocationText"
        android:layout_below="@+id/tripSourceLocationText"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Vellore" />
</RelativeLayout>
